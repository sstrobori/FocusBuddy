<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_borderlogin">



    <!-- Weekday -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/spinnerWeekday_dis"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="65dp"
            android:text="Weekday"
            android:textColor="#6C5595"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_sched_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/kiddosy_regular"
            android:text="X"
            android:textColor="#5BADEC"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B787E4"
        android:layout_marginVertical="1dp" />


    <LinearLayout
        android:id="@+id/schedule_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/Time_sched_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:textColor="#316690"
        android:text="Time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:textColor="#316690"
            android:text="-"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

    <TextView
        android:id="@+id/Time_sched_dis2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:textColor="#316690"
        android:text="Time" />

    </LinearLayout>



    <!-- Subject -->
    <TextView
        android:id="@+id/Subject_sched_dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingTop="10dp"
        android:textColor="#25435B"
        android:text="Subject" />


</LinearLayout>


</LinearLayout>
